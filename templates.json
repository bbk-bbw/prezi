{
  "title": "<div class=\"w-full h-full flex flex-col justify-center items-end text-right\"><h4 class=\"text-lg text-gray-500 font-light\">{{subheader}}</h4><h1 class=\"text-5xl font-bold text-gray-800 mt-1\">{{title}}</h1></div>",
  "overview": "<div class=\"w-full h-full flex flex-col justify-center\"><div class=\"w-full text-right mb-8\"><h4 class=\"text-lg text-gray-500 font-light\">{{subheader}}</h4><h2 class=\"text-4xl font-bold text-gray-800 mt-1\">{{title}}</h2></div><ul class=\"list-disc list-inside space-y-2 text-xl text-gray-700\">{{points}}</ul></div>",
  "theory": "<div class=\"w-full h-full flex flex-col justify-center\"><div class=\"w-full text-right mb-8\"><h4 class=\"text-lg text-gray-500 font-light\">{{subheader}}</h4><h2 class=\"text-4xl font-bold text-gray-800 mt-1\">{{title}}</h2></div><div class=\"text-lg text-gray-700 space-y-4\">{{content}}</div></div>",
  "assignment": "<div class=\"w-full h-full flex flex-col justify-center\"><div class=\"w-full text-right mb-8\"><h4 class=\"text-lg text-gray-500 font-light\">{{subheader}}</h4><h2 class=\"text-4xl font-bold text-blue-600 mt-1\">{{title}}</h2></div><div><p class=\"text-lg text-gray-800 mb-2\">{{description}}</p><a href=\"{{link}}\" target=\"_blank\" class=\"text-blue-500 hover:underline\">View Assignment Details</a></div></div>",
  "header_2col_image": "<div class=\"w-full h-full flex flex-col justify-center\"><div class=\"w-full text-right mb-4\"><h4 class=\"text-lg text-gray-500 font-light\">{{subheader}}</h4><h2 class=\"text-4xl font-bold text-gray-800 mt-1\">{{title}}</h2></div><hr class=\"border-gray-300 w-full mb-8\"><div class=\"flex flex-grow items-center\"><div class=\"w-2/3 pr-8 text-lg space-y-4\">{{content}}</div><div class=\"w-1/3 pl-8\"><img src=\"{{image_src}}\" class=\"max-h-[40vh] mx-auto object-contain\" onerror=\"this.onerror=null;this.src='https://placehold.co/400x300/e2e8f0/94a3b8?text=Image+Not+Found';\"></div></div></div>",
  "video_embed": "<div class=\"w-full h-full flex flex-col justify-center\"><div class=\"w-full text-right mb-4 flex-shrink-0\"><h4 class=\"text-lg text-gray-500 font-light\">{{subheader}}</h4><h2 class=\"text-3xl font-bold text-gray-800 mt-1\">{{title}}</h2></div><div class=\"w-full flex-grow relative min-h-0\"><div class=\"w-full h-full\"><iframe src=\"{{video_src}}\" class=\"w-full h-full rounded-lg shadow-lg\" frameborder=\"0\" allowfullscreen></iframe></div></div></div>",
  "quote": "<div class=\"w-full h-full flex flex-col items-center justify-center\"><div class=\"w-full text-right mb-8\"><h4 class=\"text-lg text-gray-500 font-light\">{{subheader}}</h4><h2 class=\"text-4xl font-bold text-gray-800 mt-1\">{{title}}</h2></div><div class=\"bg-gray-100 p-8 rounded-lg shadow-inner max-w-3xl\"><p class=\"text-2xl italic text-gray-700 leading-relaxed text-center\">\"{{quote_text}}\"</p></div></div>",
  "header_2col_text": "<div class=\"w-full h-full flex flex-col justify-center\"><div class=\"w-full text-right mb-4\"><h4 class=\"text-lg text-gray-500 font-light\">{{subheader}}</h4><h2 class=\"text-4xl font-bold text-gray-800 mt-1\">{{title}}</h2></div><hr class=\"border-gray-300 w-full my-4\"><div class=\"flex items-start text-lg\"><div class=\"w-1/2 pr-4 space-y-3\">{{content_left}}</div><div class=\"w-1/2 pl-4 space-y-3\">{{content_right}}</div></div></div>",
  "image_with_title": "<div class=\"w-full h-full flex flex-col items-center justify-center\"><div class=\"w-full text-right mb-4\"><h4 class=\"text-lg text-gray-500 font-light\">{{subheader}}</h4><h2 class=\"text-3xl font-bold text-gray-800 mt-1\">{{title}}</h2></div><hr class=\"border-gray-300 w-full my-4\"><div class=\"flex-grow flex items-center justify-center w-full\"><img src=\"{{image_src}}\" class=\"max-h-[60vh] max-w-full object-contain\" onerror=\"this.onerror=null;this.src='https://placehold.co/600x400/e2e8f0/94a3b8?text=Image+Not+Found';\"></div></div>",
  "discussion": "<div class=\"w-full h-full flex flex-col justify-center\"><div class=\"w-full text-right mb-4\"><h4 class=\"text-lg text-gray-500 font-light\">{{subheader}}</h4><h2 class=\"text-4xl font-bold text-gray-800 mt-1\">{{title}}</h2></div><hr class=\"border-gray-300 w-full my-4\"><div class=\"flex items-start\"><div class=\"w-1/2 pr-4\"><div class=\"bg-blue-50 p-6 rounded-lg border border-blue-200 text-blue-800\">{{prompt_box_content}}</div></div><div class=\"w-1/2 pl-4 text-lg\"><ul class=\"list-disc list-outside space-y-3\">{{questions}}</ul></div></div></div>",
  "default": "<div class=\"text-center\"><h2 class=\"text-2xl font-bold\">Unsupported Slide Type</h2><p>Type: {{type}}</p></div>"
}
